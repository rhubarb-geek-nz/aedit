if test -z "$CC"
then
	CC=cc
fi

rm -rf config.h

cleanup()
{
	rm -rf a.out a.c
}

trap cleanup 0

cleanup

cat > a.c << EOF
#include <stdio.h>
int main() { return 0; }
EOF
$CC $CFLAGS a.c

cat /dev/null >  config.h

cat > a.c << EOF
#include <termios.h>
int main() { return 0; }
EOF
if $CC $CFLAGS a.c
then
	echo "#define HAVE_TERMIOS_H 1" >> config.h
fi

cat > a.c << EOF
#include <limits.h>
int main() { return 0; }
EOF
if $CC $CFLAGS a.c
then
	echo "#define HAVE_LIMITS_H 1" >> config.h
fi

cat > a.c << EOF
#include <fcntl.h>
int main() { return 0; }
EOF
if $CC $CFLAGS a.c
then
	echo "#define HAVE_FCNTL_H 1" >> config.h
fi

cat > a.c << EOF
#include <sys/ioctl.h>
int main() { return 0; }
EOF
if $CC $CFLAGS a.c
then
	echo "#define HAVE_SYS_IOCTL_H 1" >> config.h
fi

cat > a.c << EOF
#include <termios.h>
struct termios t;
int main() { cfmakeraw(&t); return 0; }
EOF
if $CC $CFLAGS a.c
then
	echo "#define HAVE_CFMAKERAW 1" >> config.h
fi

cat > a.c << EOF
#include <stdio.h>
int main() { FILE *fp=tmpfile(); return !fp; }
EOF
if $CC $CFLAGS a.c
then
	echo "#define HAVE_TMPFILE 1" >> config.h
fi

cat > a.c << EOF
#include <signal.h>
int main() { return siginterrupt(0,0); }
EOF
if $CC $CFLAGS a.c
then
	echo "#define HAVE_SIGINTERRUPT 1" >> config.h
fi
